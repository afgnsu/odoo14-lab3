<odoo>
  <data>
      <record model="ir.actions.act_window" id="action_tag_view">
      <field name="name">標籤列表</field>
      <field name="res_model">lab3.tag</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Form -->

    <record model="ir.ui.view" id="action_tag_form">
      <field name="name">標籤Form</field>
      <field name="model">lab3.tag</field>
      <field name="arch" type="xml">
          <form>
              <field name="name"/>
          </form>
      </field>
    </record>

    <!-- Tree(List) -->

    <record model="ir.ui.view" id="action_tag_tree">
      <field name="name">標籤List</field>
      <field name="model">lab3.tag</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

  </data>
</odoo>